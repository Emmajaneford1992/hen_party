{
    "compilerOptions": {
      "baseUrl": "./src/",
      "paths": {
        "~*": ["./*"]
      },
      "resolveJsonModule": true, 
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "ES2021.String"]
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules"
    ]
}